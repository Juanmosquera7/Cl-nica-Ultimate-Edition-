<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="30.0"
      alignment="CENTER"
      prefWidth="800"
      prefHeight="600"
      fx:controller="co.edu.uniquindio.clinica.controladores.RegistroPacienteControlador"
      style="-fx-padding: 50;">


    <HBox alignment="CENTER">
        <ImageView fx:id="logoUsuario" fitWidth="100.0" fitHeight="100.0" preserveRatio="true"/>
    </HBox>


    <Label text="Registro de Paciente" textFill="#0f0f0f" style="-fx-font-size: 30;">
        <font>
            <Font size="30.0"/>
        </font>
    </Label>


    <HBox spacing="20.0" alignment="CENTER">
        <Label text="Identificación:" style="-fx-font-size: 18;" />
        <TextField fx:id="campoIdentificacion" promptText="Identificación del Paciente" style="-fx-font-size: 18;" prefWidth="300"/>
    </HBox>

    <HBox spacing="20.0" alignment="CENTER">
        <Label text="Nombre:" style="-fx-font-size: 18;" />
        <TextField fx:id="campoNombre" promptText="Nombre del Paciente" style="-fx-font-size: 18;" prefWidth="300"/>
    </HBox>

    <HBox spacing="20.0" alignment="CENTER">
        <Label text="Teléfono:" style="-fx-font-size: 18;" />
        <TextField fx:id="campoTelefono" promptText="Teléfono del Paciente" style="-fx-font-size: 18;" prefWidth="300"/>
    </HBox>

    <HBox spacing="20.0" alignment="CENTER">
        <Label text="Correo:" style="-fx-font-size: 18;" />
        <TextField fx:id="campoCorreo" promptText="Correo Electrónico" style="-fx-font-size: 18;" prefWidth="300"/>
    </HBox>


    <HBox spacing="20.0" alignment="CENTER">
        <Label text="Suscripción:" style="-fx-font-size: 18;" />
        <ComboBox fx:id="comboSuscripcion" style="-fx-font-size: 18;" prefWidth="300">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Premium" />
                    <String fx:value="Normal" />
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>


    <Button text="Registrar Paciente" style="-fx-font-size: 18;" prefWidth="200" onAction="#registrarPaciente"/>

</VBox>

